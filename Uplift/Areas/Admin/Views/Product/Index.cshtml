
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered table-sm" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>ArticleNo</th>
                <th>ManufactureCode</th>
                <th>Barcode</th>
                <th>Quantity</th>
                <th>B2CPrice</th>
                <th>B2BPrice</th>
                <th>PrimiumPrice</th>
                <th>DistributorPrice</th>
                <th>purchaseprice</th>
                <th>Category</th>
                <th>Frequency</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/Product.js"></script>
}