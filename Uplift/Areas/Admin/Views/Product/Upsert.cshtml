    <script>
    function validateInput() {
    if (document.getElementById("uploadBox ").value==""){
    swal("Error", "Please select an Image", "error")
    return false;
    }
    return true;
    }
    $(document).ready(function () {
    if (document.getElementById('txtPrice').value == "0") {
    document.getElementById('txtPrice').value == '';
    }
    });
    // for duplicate check
    function articleCheck() {
            $("#Status").html("Checking..");
            $.post("@Url.Action("CheckDuplicateArticleNo", "Product")",
                {
                    articleno: $("#chkarticleno").val()
                },
            function (data) {
                if (data == 0) {
                    $("#Status").html('<p style="color:green">Availabe! you can take it.</p>');
                    $("#Status").css("border-color", "Green");
                }
                else {
                    $("#Status").html('<p style="color:Red">This Article is already exist..Try another article</p>');
                    $("#Status").css("border-color", "Red");
                }
                })
        }
    </script>
}